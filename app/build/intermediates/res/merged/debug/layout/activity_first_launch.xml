<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.TeamEclairs.passkeeper.AddNewActivity" >

   
    
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Login details"
        android:drawableLeft="@drawable/security_card_opt"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView" >
   <LinearLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/textView">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#0000E9"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#ff0000"/>
    </TableRow> 
 	<TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <EditText
           android:id="@+id/usernameText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Firstname  Lastname"
           android:inputType="textPersonName" />

      
        
    </TableRow>

  <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />

  <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#0000E9"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#ff0000"/>
    </TableRow>
   <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <EditText
           android:id="@+id/passwordText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="4 digit password"
           android:maxLength="4"
           android:inputType="number"
            />
       
        
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="#0000E9"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#ff0000"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       
        <EditText
  		    android:id="@+id/emailText"
  		    android:layout_width="match_parent"
  		    android:layout_height="wrap_content"
  		    android:hint="example@example.com"
  		    android:inputType="textEmailAddress" >

  		    <requestFocus />
  		</EditText>
        
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Word"
        android:textColor="#0000E9"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#ff0000"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText
           android:id="@+id/secureText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            />
        
    </TableRow>
  	<TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" *this will help you secure your account incase you forget the PIN. Note:Do not forget this Security Word, write it somewhere if needed"
        android:textColor="#ff0000"/>
  		
       
    </TableRow>
   
  
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/clearButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_menu_revert"
        android:background="@drawable/bg_button"
        android:textAlignment="inherit"
        android:text="Clear"/>
    <Space
        android:layout_width="4dp"
        android:layout_height="match_parent" />
    
    <Button 
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:background="@drawable/bg_button"
        android:textAlignment="inherit"
        android:text="Register" />
    </TableRow>
  </LinearLayout>

</ScrollView>
</RelativeLayout>
